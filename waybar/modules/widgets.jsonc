  },
  "memory": {
    "format": "ÓøÖ {}%"
  },
  "disk": {
    "format": "ÔÇ† {specific_free:0.2f} GB",
    "tooltip": true,
    "tooltip-format": "{specific_free:0.2f} GB / {specific_total:0.2f} GB ({percentage_free}%)",
    "interval": 60,
    "unit": "GB"
  },
  "backlight": {
